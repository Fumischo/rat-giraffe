<h1>最寄り駅</h1>

<table>
  <thead>
    <tr>
      <th>路線名</th>
      <th>駅名</th>
      <th>徒歩分数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @closest_stations.each do |closest_station| %>
      <tr>
        <td><%= closest_station.route %></td>
        <td><%= closest_station.station %></td>
        <td><%= closest_station.on_foot %></td>
        <td><%= link_to 'Show', closest_station %></td>
        <td><%= link_to 'Edit', edit_closest_station_path(closest_station) %></td>
        <td><%= link_to 'Destroy', closest_station, method: :delete, data: { confirm: '本当に削除して宜しいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


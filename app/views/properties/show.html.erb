<h1>閲覧</h1>
<ul style="list-style-type: none">
	<li><strong>物件名：</strong><%="#{@property.name}"%></li>
	<br>
	<li><strong>賃料：</strong><%=number_with_delimiter"#{@property.rent}"%>円</li>
	<br>
	<li><strong>住所：</strong><%="#{@property.address}"%></li>
	<br>
	<li><strong>築年数：</strong><%="#{@property.age}"%>年</li>
	<br>
	<li><strong>備考：</strong><%="#{@property.remarks_column}"%></li>
</ul>



	<hr>


	<% @property.closest_stations.each.with_index(1) do |station, i| %>
		<h4><%= "最寄り駅#{i}" %></h4>
	<ul style="list-style-type: none">
		<li><strong>路線名：</strong><%="#{station.route}"%></li>
		<br>
		<li><strong>駅名：</strong><%="#{station.station}"%></li>
		<br>
		<li><strong>徒歩分数：</strong><%="#{station.on_foot}分"%></li>
	</ul>
	<% end %>
	<p>
		<%= link_to '編集', edit_property_path(@property.id) %>
		&#124;
		<%= link_to '戻る', properties_path %>
	</p>